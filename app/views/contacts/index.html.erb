<div class= "container">
  <p id="notice"><%= notice %></p>
  <div class= 'text-center'>
    <%= link_to 'Create New Animal', new_contact_path%>
  </div> <br><br>
  <div class= "table-responsive">
    <table class= "table table-condensed table-hover table-bordered">
      <thead>
        <tr>
          <th>Animal</th>
          <th>Species</th>
          <th>Enclosure</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.name %></td>
            <td><%= contact.media.map(&:name).sort.join(", ") %></td>
            <td><%= contact.contenttypes.map(&:name).sort.join(", ") %></td>
            
            <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
            <td><%= link_to 'Delete', contact_path(contact), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  
</div>